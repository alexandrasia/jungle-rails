<div>
  <h1>Thank you for your recent order with Jungle!</h1>
  <p>You ordered:</p>
  <% @cart_total = 0 %>
  <% @order.line_items.each do |line_item| %>
  <%= render 'item', product_id: line_item.product_id, quantity: line_item.quantity %>
  <%= yield %>
  <% end %>
  <p>TOTAL: $<%= @cart_total %></p>
</div>


